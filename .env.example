# Arquivo de exemplo para variáveis de ambiente do Vercel
# Copie este arquivo para .env e configure suas credenciais

# Django
SECRET_KEY=sua-secret-key-muito-segura-aqui
DEBUG=False
DJANGO_SETTINGS_MODULE=agendai.settings

# Banco de dados (PostgreSQL no Vercel)
DATABASE_URL=postgresql://usuario:senha@host:porta/database

# Email (Gmail SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-de-app-gmail

# Twilio (para SMS/WhatsApp)
TWILIO_ACCOUNT_SID=seu-account-sid-do-twilio
TWILIO_AUTH_TOKEN=seu-auth-token-do-twilio
TWILIO_PHONE_NUMBER=+5511999999999

# Outras configurações
ALLOWED_HOSTS=seu-dominio.vercel.app,localhost,127.0.0.1
